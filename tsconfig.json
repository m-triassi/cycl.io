{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es5",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": ["cypress"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "jsx": "react",
    "baseUrl": "resources",
    "paths": {
      "@components": ["components"],
      "@public": ["../public"],
      "@types": ["types"],
    }
  },
  "files": ["index.d.ts"],
  "include": [
    "./resources",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
